<% include ../partials/header %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="img-thumbnail">
        <img class="img-fluid" src="<%= campground.image %>">
        <div class="caption-full mx-3 mt-3">
          <h4 class="float-right">$9.00/night</h4>
          <h4><a href="#"> <%= campground.name %> </a></h1>
          <p><%= campground.description %></p>
          <p><em>Submitted By: <%= campground.author.username %></em></p>
        </div>
      </div>
      <div class="card card-block bg-light mt-3">
        <div class="text-right px-3 pt-3">
          <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Leave a review
          </a>
        </div>

        <hr>

        <% campground.comments.forEach(function(comment) { %>
          <div class="row">
            <div class="col-md-12 ">
              <div class="mx-3">
                  <strong><%= comment.author.username %></strong>
                  <span class="float-right">10 days ago</span>
                  <p class="clearfix">
                    <%= comment.text %>
                  </p>
              </div> 
            </div>
          </div>
        <% }) %>
      </div>

      

    </div>
  </div>
</div>

<% include ../partials/footer %>